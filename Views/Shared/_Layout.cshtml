    <div class="easyui-layout" data-options="fit:true" style="width: 800px;height: 600px;">
        <!--顶部-->
        <div region="north" style="height: 70px;width:auto;overflow:hidden;background-color:rgb(177, 217, 242)">
            <p style="font-size:28px">宏宇货运IT管理系统</p>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("首页", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("退出登录", "LoginIndex", "Login")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!--左侧菜单start-->
        <div region="west" title="导航菜单" split="true" style="width: 200px;">
            <div id="RightTree" style=" background-color:#BFEDE2;">
                @*<div class="panel-loading">加载中...</div>*@
                @{ Html.RenderPartial("LeftMenu", Request.IsAuthenticated); }
            </div>
        </div>
        <!--左侧菜单end-->
        <!--中间主要区域-->
        <div data-options="region:'center',border:false">
            <div id="mainTab" class="easyui-tabs" data-options="fit:true">
                <div class="container body-content" title="我的桌面" data-options="closable:true" style="overflow: auto; background:#fff">
                    @RenderBody()
                </div>
            </div>
        </div>

        <!--底部start-->
        @*<div region="south" style="text-align: center;height: 50px;">
