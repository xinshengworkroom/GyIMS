@model GyIMS.Models.Login
@{
    Layout = null;
    ViewBag.Title = "宏宇货运IT管理系统";
}


<!DOCTYPE html>
<script src="~/Scripts/jquery-easyui-1.8.8/jquery.min.js"></script>
<script src="~/Scripts/jquery-easyui-1.8.8/jquery.easyui.min.js"></script>
<link href="~/Scripts/jquery-easyui-1.8.8/themes/icon.css" rel="stylesheet" />
<link href="~/Scripts/jquery-easyui-1.8.8/themes/default/easyui.css" rel="stylesheet" />
<link href="~/Scripts/jquery-easyui-1.8.8/demo/demo.css" rel="stylesheet" />
<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>宏宇货运司机IT系统</title>

    <style type="text/css">
        body {
            background: url("../Images/bgimg002.jpg") no-repeat;
            background-size: 100%;
        }

        p {
            color: blue;
        }
    </style>

    <script>

        function doLogin()
        {
            var name = $('#username').val();
            var password = $('#password').val();
            $.ajax({
                url: "/Login/CheckLoginUserIsValid",
                type: "get",
                dataType: "json",
                data: { 'LoginUserName': name, 'LoginPassWord': password },
                success: function (data) {
                    console.log(data);
                    if (!data.success) {
                        return alert(data.err);
                    }

                    return window.location.href = "/Home/Index";
                }

            })
        }
    </script>

</head>

<body>
    @*<div class="easyui-panel" style="width: 100%; height: 100%; align-content: center" >*@
    <div>
        <!--上部begin-->
        <div region="north" style="width: 1000px; height: 20px; margin-left:300px; margin-top: 50px">
            <span style="font-size: 60px; font-family: 'KaiTi';color:#C4C400 "><strong>宏宇货运有限公司IT管理系统</strong></span>
        </div>
        <!--上部end-->
        <!--内容begin-->
        <div region="center" style="background: #000;width:350px; height: 220px; margin-left: 540px; margin-left: 540px; margin-top: 100px">
            <div style="width: 300px; height: 50px; align-content: center; margin-left: 25px; margin-top: 20px;">
                <span style="font-size: 20px; font-family: 'KaiTi'; color: orangered;"><strong>登录用户:</strong></span>
                <input id="username" class="easyui-textbox" prompt="Username" iconwidth="28" style="width:100%;height:34px;">
            </div>
            <div style="width: 300px; height: 70px; align-content: center; margin-left: 25px; margin-top: 20px; ">
                <span style="font-size: 20px; font-family: 'KaiTi'; color: orangered; "><strong>登录密码:</strong></span>
                <input id="password" class="easyui-passwordbox" prompt="Password" iconwidth="28" style="width:100%;height:34px">
            </div>
            <div style="background: #fafafa; width: 300px; align-content: center; margin-left: 25px; margin-top: 20px">
                <a href="#" class="easyui-linkbutton" iconcls="icon-ok" style="width: 300px; background-color:green" id="btnLogin" onclick="doLogin()">
                    <strong>登  录</strong>
                </a>
                @*<a href="#" class="easyui-linkbutton" iconcls="icon-no" style="width: 145px;"><strong>取消</strong></a>*@
            </div>
        </div>
        <!--内容end-->
        <!--底部begin-->
        <div region="south" style="height: 10px; text-align:center; margin-top:180px">
            <div class="page-footer">
                <div class="row">
                    <div class="col-xs-12 col-sm-12">
                        <span class="txt-color-white" style="font-size: 16px; font-family: 'KaiTi'; color: red;"><strong> <span class=" hidden-xs">宏宇货运有限公司</span> © @DateTime.Now</strong></span>
                    </div>


                </div>
            </div>
        </div>
        <!--底部end-->
    </div>
</body>
</html>


